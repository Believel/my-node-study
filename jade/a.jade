html
 head
  meta(charset="utf-8")
  -var mycourse= 'jade'
  title #{mycourse} Myjade
  style.
   body {color: #ff6600}
   h2 {color: #000000}
   h3 {color: #333333}
  script.
   var course='jade'
 body
  h2 流程
  h3 if else
  - var lessons=['jade', 'node']
  - var isMooc= true
  if lessons
   if lessons.length > 2
    p #{lessons.join(', ')}
   else if lessons.length > 1
    p #{lessons.join(', ')}
   else 
    p no lesson
  else
   p no lesson
  h3 unless 反向判断
  unless !isMooc
   p #{lessons.length}
  h3 case
  - var name = 'jade'
  case name
   when 'node'
   when 'express': p Hi express
   when 'jade': p Hi jade
   default
    p #{name}
  h3 while
  -var n= 0
  ul
   - while(n<4)
    li= n++
  h3 for
  -var immoc= {course:'jade', level:'high'}
  -for(var k in immoc)
   p= immoc[k]
  h3 each
  each value,key in immoc
   p #{key}: #{value}
  -var courses = ['node', 'jade', 'express']
  each item in courses
   p= item
  h3 嵌套循环 
  -var selections = [{id: '1',items:['a', 'b']},{id:'2', items:['c', 'd']}]
  dl
   each selection in selections
    dt= selection.id 
    each item in selection.items
     dd= item
  // 转义
  -data= 'text'
  -htmlData='<script>alert(1)</script>'
  p #{data}
  p #{htmlData}
  // 加！是非转义
  p !{htmlData}
  p= data
  p= htmlData
  p!= htmlData
  // 直接输出'#{data}',不当变量输出
  p\#{data}
  h1 单行注释，会缓存到html代码中
  // h3 哈哈
  h1 单行注释，不会缓存到html代码中
  //- h3 嘻嘻
  h1#title.title 欢迎您
  h1 块注释，采用在注释下缩进
  //-
   p 你号码
    a(href='http://www.mooc.com',title="mooc study jade") link
  p.
   1. aa
   2. bb
   3. cc
   4. dd
  -var friends = 10
  case friends
   when 0
    p you have no friends
   when 1
    p you have a friend
   default 
    p you have #{friends} friends
  -for (var x=0; x<3; x++)
   li item
  -list = ["Uno", "Bos", "Tres", "Cuatro"]
   each item in list
    li= item
  p= 'This code is <escaped>!'
</html>